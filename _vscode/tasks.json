{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Save all and Push",
      "type": "shell",
      "command": "sfdx force:source:push --json",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true,
        "focus": false,
        "showReuseMessage": true
      }
    },
    {
      "label": "sfdx info",
      "type": "shell",
      "command": "sfdx --version && sfdx plugins --core",
      "group": "none",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true,
        "focus": false,
        "showReuseMessage": true
      }
    }
  ]
}